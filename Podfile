use_frameworks!

def testing_pods
    pod 'Quick'
    pod 'Nimble'
    pod 'ReactiveCocoa', '~> 5.0.0'
    pod 'Mockingjay'
end

target 'Chess' do
  platform :ios, '10.0'
  pod 'SnapKit', '~> 3.2.0'
  pod 'SwiftyJSON', '~> 3.1.0'
  pod 'ReactiveCocoa', '~> 5.0.0'
  pod 'Alamofire', '~> 4.4'
end

target 'ChessTests' do
    platform :ios, '10.0'
    testing_pods
end

target 'ChessMac' do
    platform :osx, '10.11'
    pod 'SnapKit', '~> 3.2.0'
    pod 'SwiftyJSON', '~> 3.1.0'
    pod 'ReactiveCocoa', '~> 5.0.0'
    pod 'Alamofire', '~> 4.4'
end

target 'ChessMacTests' do
    platform :osx, '10.11'
    testing_pods
end

