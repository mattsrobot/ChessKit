platform :ios, '10.0'
use_frameworks!

def testing_pods
    pod 'Quick'
    pod 'Nimble'
    pod 'ReactiveCocoa', '~> 5.0.0'
    pod 'Mockingjay'
end

target 'Chess' do
  pod 'SnapKit', '~> 3.2.0'
  pod 'SwiftyJSON', '~> 3.1.0'
  pod 'ReactiveCocoa', '~> 5.0.0'
  pod 'Alamofire', '~> 4.4'
end

target 'ChessTests' do
    testing_pods
end
