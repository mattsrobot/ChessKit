end

target 'ChessKitMac' do
    platform :osx, '10.11'
    pod 'SnapKit', '~> 3.2.0'
    pod 'SwiftyJSON', '~> 3.1.0'
    pod 'ReactiveCocoa', '~> 5.0.0'
